<mvc:View controllerName="com.shweta.shwetaui5fioridemo1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout"   
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="IdPgView1" title="I am View1">
    <content>
    <!-- getter, setter demo -->
        <Text id="idTxtWelcome" text="Welcome to SAPUI5" textAlign="Center" width="100%" class= "sapMH1FontSize"></Text>
        <Label id="idLblName" text="Enter your name" required="true" class="sapUiMediumMarginBegin"></Label>
        <Input id="idIpName"  width="30%" maxLength="10" value="Shweta" class="sapUiTinyMarginBegin" enabled="true"></Input>
        <Button id="idBtnSubmit" text="submit" type="Emphasized" class="sapUiTinyMarginBegin" press="onSubmit"></Button>

    <!-- Grid layout demo -->
        <Panel headerText="Employee Details (1 field per row)" expandable="true" expanded="true">
            <l:Grid defaultSpan="L6 M6" vSpacing="0">
                <l:content>
                    <Label text="Employee Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Name" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Designation" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Skill" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Email Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Phone No." class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                </l:content>
             </l:Grid>
        </Panel>

       <Panel headerText="Family Details (2 fields per row) " expandable="true">
            <l:Grid defaultSpan="L3 M3" vSpacing="0">
                <l:content>
                    <Label text="Employee Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Name" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Designation" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Skill" class="sapuiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Email Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Phone No." class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                </l:content>
             </l:Grid>
        </Panel>

        <Panel headerText="Personal Details (3 fields per row)" expandable="true">
            <l:Grid defaultSpan="L2 M2" vSpacing="0">
                <l:content>
                    <Label text="Employee Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Name" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Designation" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Skill" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Email Id" class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                    <Label text="Employee Phone No." class="sapUiTinyMarginTop"></Label>
                    <Input ></Input>
                </l:content>
             </l:Grid>
        </Panel>

        <Panel headerText="Zigzag layout" expandable="true">
            <l:Grid vSpacing="0">
                <l:content>
                    <Label text="Employee Name" class="sapUiTinyMarginTop">
                        <layoutData>
                            <l:GridData span="L3 M3"></l:GridData>
                        </layoutData>
                    </Label>
                    <Input >
                    <layoutData>
                    <l:GridData span="L9 M9"></l:GridData>
                    </layoutData>
                    </Input>
                    <Label text="Employee Skill" class="sapUiTinyMarginTop">
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                    </layoutData>
                    </Label>
                    <Input >
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                    </layoutData>
                    </Input>
                    <Label text="Employee Designation" class="sapUiTinyMarginTop">
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                    </layoutData>
                    </Label>
                    <Input >
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                    </layoutData>
                    </Input>
                    <Label text="Employee Address" class="sapUiTinyMarginTop">
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                    </layoutData>
                    </Label>
                    <Input >
                    <layoutData>
                    <l:GridData span="L9 M9"></l:GridData>
                    </layoutData>
                    </Input>
                </l:content>
             </l:Grid>
        </Panel>

    <!-- Simple form demo -->

    <f:SimpleForm title="Employee Details (Simple form demo)" editable="true" layout="ResponsiveGridLayout"
    labelSpanL="5" labelSpanM="5" emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="2">
        <f:content>
            <core:Title text="Employee details"></core:Title>
            <Label text="Employee Id"></Label>
            <Input ></Input>
             <Label text="Employee Name"></Label>
            <Input ></Input>
            <Label text="Employee Designation"></Label>
            <Input ></Input>

            <core:Title text="Contact details"></core:Title>
            <Label text="Employee Email"></Label>
            <Input ></Input>
            <Label text="Employee Phone No."></Label>
            <Input ></Input>

            <core:Title text="Skill details"></core:Title>
            <Label text="Employee Skill"></Label>
            <Input ></Input>
        </f:content>
    </f:SimpleForm>


    <!-- VBOX Demo  -->

    <VBox >
        <Button text="Button1"></Button>
        <Button text="Button2"></Button>
    </VBox>

    <!-- HBOX Demo -->

    <HBox >
        <Button text="Button1"></Button>
        <Button text="Button2"></Button>
    </HBox>

    <!-- FlexBox Demo -->

    <FlexBox justifyContent="End" alignItems="End" height="100%">
        <Button text="Go" type="Accept"></Button>
        <Button text="Reset" type="Reject" class = 'sapUiTinyMarginBegin'></Button>
    </FlexBox>


    <!-- ObjectHeader, its sub-parts and IconTabBar Demo -->
        <ObjectHeader  title="Shweta" number="3500000" numberUnit="INR" backgroundDesign="Solid">
            <attributes> 
                <ObjectAttribute title="Employee Id" text="100001"></ObjectAttribute>
                <ObjectAttribute title="Designation" text="Manager"></ObjectAttribute>
            </attributes>
            <statuses>
                <ObjectStatus text="PERMANENT" state="Success"></ObjectStatus>
            </statuses>
        </ObjectHeader>

        <IconTabBar >
            <items>
                <IconTabFilter icon="sap-icon://information" >
                    <Text text="I am Information Tab"></Text>
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://notes">
                    <Text text="I am Notes Tab"></Text>
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://attachment">
                    <Text text="This is Files tab"></Text>
                </IconTabFilter>
            </items>
        </IconTabBar>

        <!-- Validations Demo -->
        <!-- There are 2 types of validations - Mandatory Field Validation and Data Format Validations -->
        <!-- These are types of Data format validations -  -->
        <!-- 1. Alphabet validation -->
        <!-- 2. Numeric Validation -->
        <!-- 3. AlphaNumeric Validation -->
        <!-- 4. Length Validation -->
