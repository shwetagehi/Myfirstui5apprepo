        <Text id="idTxtWelcome" text="Welcome to SAPUI5" textAlign="Center" width="100%" class= "sapMH1FontSize"></Text>
        <Label id="idLblName" text="Enter your name" required="true" class="sapUiMediumMarginBegin"></Label>
        <Input id="idIpName"  width="30%" maxLength="10" value="Shweta" class="sapUiTinyMarginBegin" enabled="true"></Input>
